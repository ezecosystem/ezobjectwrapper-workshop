{% extends "KaliopEzobjectWorkshopBundle::pagelayout.html.twig" %}

{% block content %}
    <div class="container">
        <div class="bs-docs-section">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">
                        <h1 id="type">{{ ez_render_field(content,'name') }}</h1>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-4">
                <div class="bs-component">
                    <h2>Children</h2>
	                <ul class="list-group">
                    {% for child in  children %}
	                    <li class="list-group-item">{{ ez_render_field(child.content,child.titleField) }}</li>
                    {% endfor %}
	                </ul>
                </div>

            </div>

        </div>



        </div>
{% endblock %}